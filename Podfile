platform :ios, '8.0'

source 'https://github.com/CocoaPods/Specs.git' # CocoaPods官方仓库地址
source 'https://github.com/kindlymental/Specs.git' # 组件库地址

project 'PIPPlayer.xcodeproj'

use_frameworks!

target 'PIPPlayer' do
    
    pod 'AFNetworking','3.2.1'
    pod 'SDWebImage','4.4.2'
    pod 'MJRefresh','3.1.15.7'
    pod 'YYModel','1.0.4'
    pod 'YYCategories','1.0.4'
    pod 'Masonry','1.1.0'
    pod 'MBProgressHUD','1.1.0'

    #解析xml
    pod 'XMLDictionary'

#    pod 'ReactiveCocoa', '~>8.0'
    pod 'ReactiveObjC', '3.1.0'

    #菜单栏
    pod 'RESideMenu', '~> 4.0.7'
    #检测内存溢出
    pod 'MLeaksFinder','1.0.0'
    #日志框架
    pod 'CocoaLumberjack','3.4.2'
    #无数据提示
    pod 'DZNEmptyDataSet','1.8.1'
    #百度地图
    pod 'BaiduMapKit','4.2.0'
    #Bugly
    pod 'Bugly','2.5.0'
    #json转gif
    pod 'lottie-ios','2.5.0'
    #blur effect
    pod 'SABlurImageView','5.0.0'   # swift类型库
     
    pod "Texture",'2.6'  # AsyncDisplayKit

    #内部封装的组件库
    pod 'ComponentsPod'

end
